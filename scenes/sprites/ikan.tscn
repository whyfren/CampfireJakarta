script/source = "extends Area2D

# ==========================
# MOVEMENT SETTINGS
# ==========================
export var move_speed = 100
export var min_direction_time = 1.0
export var max_direction_time = 3.0

# ==========================
# FISH DATA
# ==========================
export var fish_name = \"Ikan Biasa\"

var direction = 1
var timer = 0.0
var wait_time = 0.0
var is_captured = false


# ==========================
# READY
# ==========================
func _ready():
	randomize()
	set_random_direction()
	reset_timer()


# ==========================
# PROCESS (MOVEMENT)
# ==========================
func _process(delta):

	timer += delta
	
	if timer >= wait_time:
		set_random_direction()
		reset_timer()

	position.x += direction * move_speed * delta
	
	update_flip()


# ==========================
# RANDOM DIRECTION
# ==========================
func set_random_direction():
	if randi() % 2 == 0:
		direction = -1
	else:
		direction = 1


# ==========================
# RANDOM TIMER
# ==========================
func reset_timer():
	timer = 0
	wait_time = rand_range(min_direction_time, max_direction_time)


# ==========================
# FLIP SPRITE
# ==========================
func update_flip():
	# Jika direction negatif = kiri
	$AnimatedSprite.flip_h = direction < 0


# ==========================
# CAPTURE SYSTEM
# ==========================
func _on_Fish_body_entered(body):
	if body.has_method(\"add_item\"):
		capture(body)


func capture(player):
	if is_captured:
		return
	
	is_captured = true
	player.add_item(fish_name)
	queue_free()


func _on_ikan_body_entered(body):
	pass # Replace with function body.
